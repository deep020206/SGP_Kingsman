# ===== KINGSMAN FRONTEND ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and fill in your actual values

# ===== DEVELOPMENT SERVER =====
# Uncomment the next line to make the app accessible on your local network
# HOST=0.0.0.0
PORT=3000
GENERATE_SOURCEMAP=true

# ===== API CONFIGURATION =====
# Backend API endpoints - UPDATE THESE WITH YOUR BACKEND URLS
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SERVER_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000

# ===== ENVIRONMENT =====
REACT_APP_ENVIRONMENT=development

# ===== PRODUCTION CONFIGURATION =====
# For production deployment, use your actual backend URL:
# REACT_APP_API_URL=https://your-backend-domain.railway.app/api
# REACT_APP_SERVER_URL=https://your-backend-domain.railway.app
# REACT_APP_SOCKET_URL=https://your-backend-domain.railway.app
# REACT_APP_ENVIRONMENT=production

# ===== OPTIONAL FEATURES =====
REACT_APP_SHOP_NAME=Kingsman
REACT_APP_VERSION=$npm_package_version

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# Social Media
REACT_APP_FACEBOOK_URL=https://facebook.com/kingsmen
REACT_APP_INSTAGRAM_URL=https://instagram.com/kingsmen